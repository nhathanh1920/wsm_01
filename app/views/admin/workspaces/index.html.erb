<div class="banner-w3agile">
  <div class="container">
    <h3>
      <span>
        <%= link_to image_tag("new.png", class:"img-responsi"),
          new_admin_workspace_path, remote: true, class: "btn btn-primarys" %>
      </span>
    </h3>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2><%= t ".workspace_list" %></h2>
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th><%= t ".index" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".description" %></th>
          <th colspan="2"><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody id = "body_table_data">
        <%= render "list_workspaces" %>
      </tbody>
    </table>
    <%= paginate @workspaces %>
  </div>
  <div id="level-modal" class="modal fade"></div>
</div>
